{
  "name": "heady-automation-ide",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"pnpm run dev:server\" \"pnpm run dev:client\"",
    "dev:server": "cross-env PORT=4100 tsx -r tsconfig-paths/register watch src/server/index.ts",
    "dev:client": "vite --port 5173 --host",
    "build": "tsc -p tsconfig.server.json && tsc -p tsconfig.client.json && vite build",
    "start": "node dist/server/index.js",
    "test": "vitest",
    "test:e2e": "playwright test",
    "lint": "eslint src --ext .ts,.tsx"
  },
  "dependencies": {
    "@heady/task-manager": "workspace:*",
    "@heady/ui": "workspace:*",
    "@monaco-editor/react": "^4.6.0",
    "@octokit/rest": "^20.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "framer-motion": "^12.29.2",
    "lucide-react": "^0.563.0",
    "monaco-editor": "^0.55.1",
    "playwright": "^1.41.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.7.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.10",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.24",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.3.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vitest": "^1.2.1"
  }
}
