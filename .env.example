# Heady Ecosystem Environment Variables
# Copy this file to .env.local for local development or .env.production for production

# Environment Context
HEADY_ENV=development # or production, staging
NODE_ENV=development

# Database Configuration (PostgreSQL)
# For local docker-compose, host is 'db' (internal) or 'localhost' (external)
POSTGRES_USER=heady
POSTGRES_PASSWORD=secure_password_here
POSTGRES_DB=headysystems_dev
DATABASE_HOST=localhost
DATABASE_PORT=5432

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=secure_redis_password

# Authentication & Security
HEADY_AUTH_TOKEN=your_auth_token
JWT_SECRET_KEY=your_jwt_secret
ENCRYPTION_KEY=your_encryption_key

# External Services (MCP & API Integrations)
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
GOOGLE_GEMINI_API_KEY=...
PERPLEXITY_API_KEY=pplx-...
GITHUB_TOKEN=ghp_...

# Figma Integration
FIGMA_API_TOKEN=...
FIGMA_FILE_KEY=...

# Heady Automation IDE
PORT=4100
VITE_AUTOMATION_API_KEY=your_secure_api_key_here

# Realtime Monitoring & Dynamic Queue Allocation
HC_MONITORING_ENABLED=true
HC_MONITORING_INTERVAL_MS=5000
HC_ALLOCATOR_ENABLED=true
HC_QUEUE_MIN_CONCURRENT=1
HC_QUEUE_MAX_CONCURRENT=6
HC_QUEUE_CPU_HIGH=85
HC_QUEUE_CPU_LOW=55
HC_QUEUE_MEMORY_HIGH=85
HC_QUEUE_MEMORY_LOW=70
HC_QUEUE_SCALE_STEP=1
HC_QUEUE_SCALE_COOLDOWN_MS=8000
HC_QUEUE_PRESSURE=3

# Security Configuration
HC_AUTOMATION_API_KEY=your_secure_api_key_here
HC_ALLOW_NONLOCAL_ORIGINS=false
HC_AUTOMATION_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:4100
# Cloudflare Tunnel (Optional)
TUNNEL_TOKEN=your_cloudflare_tunnel_token

# MCP Service Configuration
HC_HEADY_MCP_ENDPOINT=http://localhost:7001
HC_PERPLEXITY_ENDPOINT=http://localhost:7002
HC_GEMINI_ENDPOINT=http://localhost:7003
HC_JULES_ENDPOINT=http://localhost:7004
JULES_API_KEY=your_jules_api_key
HUGGINGFACE_TOKEN=hf_...
GITHUB_COPILOT_TOKEN=...
PLAYWRIGHT_HEADLESS=true

# GitHub Integration
GITHUB_APP_ID=your_github_app_id
GITHUB_APP_PRIVATE_KEY=your_private_key_path
GITHUB_WEBHOOK_SECRET=your_webhook_secret
GITHUB_INSTALLATION_ID=your_installation_id

# Cloudflare Configuration
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_ZONE_ID=your_zone_id
CLOUDFLARE_KV_NAMESPACE_ID=your_kv_namespace_id

# Render.com Configuration
RENDER_API_KEY=your_render_api_key
RENDER_SERVICE_ID=your_service_id
RENDER_DEPLOY_HOOK=https://api.render.com/deploy/...

# Drupal CMS
DRUPAL_DB_PASSWORD=secure_drupal_password
DRUPAL_ROOT_PASSWORD=secure_root_password
DRUPAL_API_URL=http://localhost:8080
DRUPAL_API_KEY=your_drupal_api_key
